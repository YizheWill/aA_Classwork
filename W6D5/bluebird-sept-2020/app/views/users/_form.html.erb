<% action_type = action == 'update' ? user_url(user) : users_url %>
<form action="<%= action_type %>" method="post">
  <% if action == 'update' %>
    <input type="hidden" name="_method" value="patch">
  <% end %>
  <label for="name">Name</label>
  <input type="text" name="user[username]" value="<%= user.username%>" id="name">
  <label for="email">UserName</label>
  <input type="text" name="user[email]" value="<%= user.email%>" id="email">
  <label for="age">Age</label>
  <input type="text" name="user[age]" value="<%=user.age%>" id="age">
  <input type="submit" value="<%= action %>">
</form>
