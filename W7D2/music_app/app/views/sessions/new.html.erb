<div style="display: block; margin: 20px auto; max-width: 300px;">
  <div style="background-color: #e2e2e2; display: flex; flex-direction: column; align-items: center;">
    <h2>Sign In</h2>
    <br>
    <form action='<%= session_url %>' method='POST'>
      <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
      <label style="margin-bottom: 20px;">Email
        <input style="float:right;" type='' name='user[email]'>
      </label>
      <label style="margin-bottom: 20px;">Password
        <input style="float: right;" type='password' name='user[password]'>
      </label>
      <input style="margin-bottom: 20px; float: right" type='submit' value='Submit'>
    </form>
  </div>
</div>
